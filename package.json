{
  "name": "secret-sentinel-scanner-rotator",
  "version": "0.2.0",
  "description": "A small TypeScript CLI that scans files for secret-like patterns and supports pluggable rotators (dry-run/apply).",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "sentinel": "./dist/cli.js",
    "secret-sentinel": "./dist/cli.js"
  },
  "files": [
    "dist/**/*",
    "config/**/*",
    "scripts/verify-install.js",
    "README.md",
    "LICENSE",
    "SECURITY.md",
    "!README.md.backup",
    "!**/*.test.js",
    "!**/*.test.ts"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sirhCC/Sentinel-ScannerRotator.git"
  },
  "bugs": {
    "url": "https://github.com/sirhCC/Sentinel-ScannerRotator/issues"
  },
  "homepage": "https://github.com/sirhCC/Sentinel-ScannerRotator#readme",
  "scripts": {
    "build": "tsc -p .",
    "start": "node dist/cli.js",
    "dev": "ts-node src/cli.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src test --ext .ts",
    "format": "prettier --write .",
    "clean": "rimraf dist .sentinel_tmp tmp-demo tmp-try tmp-config.txt",
    "prepublishOnly": "npm run clean && npm run build && npm test",
    "prepack": "npm run build",
    "postinstall": "node scripts/verify-install.js || exit 0",
    "version": "npm run format && git add -A",
    "postversion": "git push && git push --tags",
    "pack:test": "npm pack && echo '\nTest installation with: npm install -g ./secret-sentinel-scanner-rotator-*.tgz'",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "secret",
    "scanner",
    "rotator",
    "typescript",
    "security",
    "secret-management",
    "secret-detection",
    "aws-secrets-manager",
    "hashicorp-vault",
    "cli",
    "devops",
    "devsecops"
  ],
  "author": "sirhCC",
  "license": "MIT",
  "devDependencies": {
    "@types/jszip": "^3.4.1",
    "@types/node": "^20.19.27",
    "@types/tar-stream": "^3.1.2",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "rimraf": "^5.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "commander": "^14.0.2",
    "ignore": "^5.2.0",
    "js-yaml": "^4.1.1",
    "jszip": "^3.10.1",
    "tar-stream": "^3.1.7",
    "zod": "^4.1.13"
  }
}
